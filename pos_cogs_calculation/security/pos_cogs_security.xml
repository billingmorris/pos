<!-- pos_cogs_calculation/security/pos_cogs_security.xml -->
<odoo>
    <!-- Define Security Group -->
    <record id="group_pos_cogs_user" model="res.groups">
        <field name="name">POS COGS User</field>
        <field name="category_id" ref="base.module_category_point_of_sale"/>
    </record>

    <!-- Add Access Control Rules -->
    <record id="access_pos_cogs_report" model="ir.model.access">
        <field name="name">pos.cogs.report.access</field>
        <field name="model_id" ref="model_pos_cogs_report"/>
        <field name="group_id" ref="group_pos_cogs_user"/>
        <field name="perm_read">1</field>
        <field name="perm_write">0</field>
        <field name="perm_create">0</field>
        <field name="perm_unlink">0</field>
    </record>
</odoo>
