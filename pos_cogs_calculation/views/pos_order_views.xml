<!-- pos_cogs_calculation/views/pos_order_views.xml -->
<odoo>
    <data>
        <!-- Inherit POS Order Form View -->
        <record id="view_pos_order_form_inherit" model="ir.ui.view">
            <field name="name">pos.order.form.inherit</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="total_cost_of_goods_sold" groups="pos_cogs_calculation.group_view_total_cost_of_goods_sold"/>
                </xpath>
                
            </field>
        </record>
        <!-- Inherit POS Order Tree View -->
        <record id="view_pos_order_tree_inherit" model="ir.ui.view">
            <field name="name">pos.order.tree.inherit</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="total_cost_of_goods_sold" optional="hide"/>
                </xpath>
    
            </field>
        </record>

        <!-- Inherit POS Order Line Tree View -->
    <record id="view_pos_order_line_tree_inherit" model="ir.ui.view">
        <field name="name">pos.order.line.tree.inherit</field>
        <field name="model">pos.order.line</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='price_unit']" position="after">
                <field name="standard_price" string="Cost Price"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit POS Order Line Form View -->
    <record id="view_pos_order_line_form_inherit" model="ir.ui.view">
        <field name="name">pos.order.line.form.inherit</field>
        <field name="model">pos.order.line</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='price_unit']" position="after">
                <field name="standard_price" string="Cost Price"/>
            </xpath>
        </field>
    </record>
        
    </data>
</odoo>
